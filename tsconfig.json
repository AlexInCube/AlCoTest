{
  "compilerOptions": {
    "module": "CommonJs",
    "target": "es2016",
    //"types": ["node", "jest"],
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}
