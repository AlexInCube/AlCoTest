{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2021",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}
